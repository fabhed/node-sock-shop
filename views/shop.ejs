<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1>Socks Shop</h1>
  </header>
  <main>
    <ul class="socks-list">
      <% socks.forEach(sock => { %>
        <li class="sock-item">
          <img src="<%= sock.imageUrl %>" alt="<%= sock.name %>">
          <h2><%= sock.name %></h2>
          <p>Price: $<%= sock.price.toFixed(2) %></p>
          <button>Buy</button>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
